{
  "name": "promptos",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "benchmarks"
  ],
  "scripts": {
    "build": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc -b",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "bun@1.3.9",
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/bun": "^1.3.9",
    "@vitest/coverage-v8": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
